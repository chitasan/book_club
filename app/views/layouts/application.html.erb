<!DOCTYPE html>
<html>
  <head>
    <title>BookClub</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>
  </head>

  <body>
    <section id="nav-bar">
      <% unless @contributors %>
        <%= link_to "Return to Homepage", root_path %>
      <% end %>
      <% unless @books %>
        <%= link_to "Go to Books", books_path %>
      <% end %>
    </section>
    <%= yield %>
  </body>
</html>
