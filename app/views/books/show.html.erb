<section class="book" id="book-<%= @book.id %>">
  <h1><%= @book.title %></h1>

  <img src="<%= @book.book_cover_photo %>" alt="Book Cover Photo">
  <ul>
  <li>Author(s):</li>
    <% @book.authors.each do |author| %>
      <li><%= link_to author.name, author_path(author) %></li>
    <% end %>
  <li>Pages: <%= @book.pages %></li>
  <li>Publication Year: <%= @book.pub_date %></li>
  </ul>
  <p><%= link_to "Delete this book", delete_book_path(@book), method: :delete %></p>
</section>

<h3>Review Statistics</h3>
<section class="review_stats" id="review_stats">
  <p>Top 3 Reviews:
    <ul>
      <% @top_reviews.each do |review| %>
        <li><%= review.title %></li>
        <li>Rating: <%= review.rating %></li>
        <li>User: <%= review.user_name %></li>
      <% end %>
    </ul>
  </p>
  <p>Bottom 3 Reviews:
     <ul>
       <% @bottom_reviews.each do |review| %>
        <li><%= review.title %></li>
        <li>Rating: <%= review.rating %></li>
        <li>User: <%= review.user_name %></li>
      <% end %>
    </ul>
  </p>
  <% unless @book.reviews.empty? %>
    <p>Overall Average Rating: <%= @average_rating.round(1) %></p>
  <% end %>
</section>

<h3>Reviews</h3>
  <%= link_to "Write a new review for this book", new_book_review_path(@book) %>
  <% @book.reviews.each do |review| %>
    <section class="reviews" id="review-<%= review.id %>">
      <p>User: <%= link_to review.user_name, user_show_path(review.user_name) %></p>
      <p>Title: <%= review.title %></p>
      <p>Review: <%= review.content %></p>
      <p>Rating: <%= review.rating %></p><br>
    </section>
  <% end %>
