<section class="add-book"><br>
<h3>ADD A BOOK</h3><br>
<%= form_for @book do |f| %>
  <%= render :partial => "error_message", locals: {object: @book} %><br>
  <p>
    <%= f.label :title, "Title" %>
    <%= f.text_field :title %>
  </p><br>
  <p>
    <%= f.label :authors, "Author(s)" %>
    <%= f.text_field :authors, value: "" %>
  </p>
  <p><br>
    <%= f.label :pages, "Pages" %>
    <%= f.number_field :pages, min: 1 %><br>
  </p>
  <p><br>
    <%= f.label :pub_date, "Publication Date" %>
    <%= f.number_field :pub_date, min: 1455 %>
  </p>
  <p><br>
    <%= f.submit %>
  </p>
<% end %>
